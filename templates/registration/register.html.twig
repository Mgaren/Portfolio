{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ 'styles/footer.css' }}" rel="stylesheet">
    <link href="{{ 'styles/nav.css' }}" rel="stylesheet">
    <link href="{{ 'styles/registration.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <header>
        {% include "_nav.html.twig" %}
        {% block headerTitle %}{% endblock %}
    </header>
    <main>
        {% block main %}
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div class="registration">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                <div class="name">{{ form_row(registrationForm.name) }}</div>
                <div class="email">{{ form_row(registrationForm.email) }}</div>
                <div class="password">{{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}</div>
                <div class="condition">{{ form_row(registrationForm.agreeTerms, {label: 'acceptez-vous les conditions --> '}) }}
                    <label for="conditions"><a href="#">Les conditions d'utilisation du service </a></label>
                </div>

                <button type="submit" class="btn"> S'inscrire </button>
                {{ form_end(registrationForm) }}
            </div>
        {% endblock %}
    </main>
    {% include "_footer.html.twig" %}
{% endblock %}
